<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.brucechoe.meteor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
	    android:allowBackup="true"
	    android:icon="@mipmap/ic_launcher"
	    android:label="@string/app_name"
	    android:roundIcon="@mipmap/ic_launcher_round"
	    android:supportsRtl="true"
	    android:theme="@style/Theme.Tinder_test.Splash">

        <service
	        android:name="com.brucechoe.meteor.message.fcm.FirebaseService"
	        android:exported="true"
	        android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <meta-data
	        android:name="com.google.firebase.messaging.default_notification_icon"
	        android:resource="@drawable/logo" />
        <meta-data
	        android:name="com.google.firebase.messaging.default_notification_color"
	        android:resource="@color/purple_700" />

        <activity
	        android:name="com.brucechoe.meteor.message.MyMsgActivity"
	        android:theme="@style/Theme.AppCompat"
	        android:exported="false" />
	    
        <activity
	        android:name="com.brucechoe.meteor.message.ListViewAdapter"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat"
	        tools:ignore="Instantiatable" />
        <activity
	        android:name="com.brucechoe.meteor.message.MyLikeListActivity"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat" />
        <activity
	        android:name="com.brucechoe.meteor.setting.SettingActivity"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat" />
        <activity
	        android:name="com.brucechoe.meteor.setting.MyPageActivity"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat" />
        <activity
	        android:name="com.brucechoe.meteor.auth.IntroActivity"
	        android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
	        android:name="com.brucechoe.meteor.auth.LoginActivity"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat" />
        <activity
	        android:name="com.brucechoe.meteor.auth.JoinActivity"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat" />
        <activity
	        android:name="com.brucechoe.meteor.MainActivity"
	        android:exported="true"
	        android:theme="@style/Theme.AppCompat">
        </activity>
    </application>

</manifest>